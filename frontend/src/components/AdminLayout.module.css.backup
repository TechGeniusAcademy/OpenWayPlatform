.admin-layout {
  display: flex;
  min-height: 100vh;
  position: relative;
}

/* Мобильная шапка */
.admin-mobile-header {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: #1a1d29;
  color: #ffffff;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  border-bottom: 1px solid #2a2f3f;
  z-index: 1000;
}

.admin-mobile-header h1 {
  font-size: 18px;
  margin: 0;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.menu-toggle {
  background: none;
  border: none;
  color: #e0e0e0;
  font-size: 24px;
  cursor: pointer;
  padding: 5px;
  display: flex;
  align-items: center;
  transition: color 0.2s ease;
}

.menu-toggle:hover {
  color: #ffffff;
}

.mobile-user-info {
  font-size: 14px;
  color: #b0b3c1;
}

/* Оверлей для закрытия сайдбара на мобильных */
.admin-sidebar-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.sidebar {
  width: 80px;
  background: #1a1d29;
  color: #e0e0e0;
  padding: 0;
  border-right: 1px solid #2a2f3f;
  position: fixed;
  height: 100vh;
  overflow-y: auto;
  overflow-x: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 999;
  display: flex;
  flex-direction: column;
  /* Скрыть скроллбар для всех браузеров */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE и Edge */
}

.sidebar:hover {
  width: 260px;
}

/* Скрыть скроллбар для Webkit браузеров (Chrome, Safari, Edge) */
.sidebar::-webkit-scrollbar {
  display: none;
}

.admin-sidebar-header {
  padding: 24px 20px;
  background: #0f111a;
  color: #ffffff;
  border-bottom: 1px solid #2a2f3f;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  min-height: 100px;
}

.sidebar:hover .admin-sidebar-header {
  align-items: flex-start;
}

.admin-sidebar-header h2 {
  font-size: 20px;
  margin: 0;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  opacity: 0;
  width: 0;
  transition: all 0.3s ease;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  color: #ffffff;
}

.sidebar:hover .admin-sidebar-header h2 {
  opacity: 1;
  width: auto;
  margin-bottom: 8px;
}

.admin-sidebar-header p {
  font-size: 13px;
  color: #8a8d9a;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  opacity: 0;
  width: 0;
  transition: all 0.3s ease;
  margin: 0;
}

.sidebar:hover .admin-sidebar-header p {
  opacity: 1;
  width: auto;
}

.admin-sidebar-menu {
  list-style: none;
  padding: 20px 10px;
  flex: 1;
}

.admin-sidebar-menu li {
  margin-bottom: 4px;
}

.admin-sidebar-menu a {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 13px 18px;
  color: #8a8d9a;
  text-decoration: none;
  transition: all 0.2s ease;
  border-radius: 6px;
  position: relative;
  overflow: hidden;
  font-weight: 500;
  font-size: 14px;
  letter-spacing: 0.3px;
}

.sidebar:hover .admin-sidebar-menu a {
  justify-content: flex-start;
}

.admin-sidebar-menu a::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 3px;
  background: #4a90e2;
  transform: scaleY(0);
  transition: transform 0.2s ease;
}

.admin-sidebar-menu a:hover {
  background: rgba(74, 144, 226, 0.1);
  color: #ffffff;
}

.admin-sidebar-menu a:hover::before {
  transform: scaleY(1);
}

.admin-sidebar-menu a.active {
  background: rgba(74, 144, 226, 0.15);
  color: #4a90e2;
  font-weight: 600;
}

.admin-sidebar-menu a.active::before {
  transform: scaleY(1);
}

.admin-menu-icon {
  margin-right: 0;
  font-size: 20px;
  display: flex;
  align-items: center;
  min-width: 20px;
  flex-shrink: 0;
  transition: margin-right 0.3s ease;
}

.sidebar:hover .admin-menu-icon {
  margin-right: 12px;
}

.admin-menu-text {
  white-space: nowrap;
  overflow: hidden;
  opacity: 0;
  width: 0;
  transition: all 0.3s ease;
}

.sidebar:hover .admin-menu-text {
  opacity: 1;
  width: auto;
}

.admin-logout-btn {
  position: relative;
  margin: 10px 12px 20px 12px;
  padding: 13px;
  background: #2a2f3f;
  color: #e0e0e0;
  border: 1px solid #3a3f4f;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.2s ease;
  flex-shrink: 0;
  opacity: 0;
  pointer-events: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.sidebar:hover .admin-logout-btn {
  opacity: 1;
  pointer-events: auto;
}

.admin-logout-btn:hover {
  background: #d32f2f;
  border-color: #d32f2f;
  color: #ffffff;
}

.admin-logout-btn:active {
  transform: scale(0.98);
}

.admin-logout-btn .admin-menu-icon {
  margin-right: 0;
  font-size: 18px;
}

.admin-main-content {
  margin-left: 80px;
  flex: 1;
  padding: 30px;
  width: calc(100% - 80px);
  min-height: 100vh;
  background: #0f111a;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.page-header {
  margin-bottom: 30px;
  padding: 24px;
  background: #1a1d29;
  border: 1px solid #2a2f3f;
  border-radius: 8px;
}

.page-header h1 {
  font-size: 28px;
  color: #ffffff;
  margin-bottom: 8px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.page-header p {
  color: #8a8d9a;
  font-size: 15px;
  font-weight: 400;
}

/* Адаптивный дизайн */
@media (min-width: 1920px) {
  .sidebar {
    width: 85px;
  }

  .sidebar:hover {
    width: 280px;
  }

  .admin-main-content {
    margin-left: 85px;
    width: calc(100% - 85px);
    padding: 40px 60px;
  }

  .page-header h1 {
    font-size: 32px;
  }

  .page-header p {
    font-size: 16px;
  }
}

@media (min-width: 1440px) and (max-width: 1919px) {
  .sidebar {
    width: 80px;
  }

  .sidebar:hover {
    width: 270px;
  }

  .admin-main-content {
    margin-left: 80px;
    width: calc(100% - 80px);
    padding: 35px;
  }

  .page-header h1 {
    font-size: 30px;
  }
}

@media (max-width: 1024px) {
  .sidebar {
    width: 70px;
  }

  .sidebar:hover {
    width: 240px;
  }

  .admin-main-content {
    margin-left: 70px;
    width: calc(100% - 70px);
  }
}

@media (max-width: 768px) {
  .admin-mobile-header {
    display: flex;
  }

  .sidebar {
    transform: translateX(-100%);
    width: 260px;
  }

  .sidebar:hover {
    width: 260px;
  }

  .sidebar-open {
    transform: translateX(0);
  }

  .sidebar-open .admin-sidebar-header h2,
  .sidebar-open .admin-sidebar-header p,
  .sidebar-open .admin-menu-text,
  .sidebar-open .admin-logout-btn {
    opacity: 1;
    width: auto;
  }

  .sidebar-open .admin-menu-icon {
    margin-right: 12px;
  }

  .sidebar-open .admin-sidebar-menu a {
    justify-content: flex-start;
  }

  .sidebar-open .admin-sidebar-header {
    align-items: flex-start;
  }

  .admin-sidebar-overlay {
    display: block;
  }

  .admin-main-content {
    margin-left: 0;
    width: 100%;
    padding: 20px;
    margin-top: 60px;
  }

  .page-header {
    padding: 20px;
  }

  .page-header h1 {
    font-size: 24px;
  }

  .page-header p {
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .admin-mobile-header h1 {
    font-size: 16px;
  }

  .mobile-user-info {
    font-size: 12px;
  }

  .admin-main-content {
    padding: 15px;
  }

  .page-header {
    padding: 16px;
    margin-bottom: 20px;
  }

  .page-header h1 {
    font-size: 22px;
  }

  .page-header p {
    font-size: 13px;
  }

  .sidebar {
    width: 240px;
  }

  .admin-sidebar-menu a {
    padding: 12px 14px;
    font-size: 13px;
  }

  .admin-menu-icon {
    font-size: 18px;
    margin-right: 10px;
  }
}
